<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirecting to CivilView...</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0f1419;
            color: #f3f4f6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            text-align: center;
            padding: 2rem;
        }
        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #374151;
            border-top-color: #10b981;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1.5rem;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        h1 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #10b981;
        }
        p {
            color: #9ca3af;
            font-size: 0.95rem;
        }
        .manual-link {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid #374151;
        }
        .manual-link a {
            color: #10b981;
            text-decoration: none;
        }
        .manual-link a:hover {
            text-decoration: underline;
        }
        /* Hidden iframe to set cookie */
        #cookie-frame {
            position: absolute;
            width: 1px;
            height: 1px;
            opacity: 0;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="spinner"></div>
        <h1>Redirecting to CivilView...</h1>
        <p>Please wait while we load the property details.</p>
        <div class="manual-link">
            <p>Not redirecting? <a id="manual-link" href="#">Click here</a></p>
        </div>
    </div>

    <!-- Hidden iframe loads search page to set session cookie -->
    <iframe id="cookie-frame"></iframe>

    <script>
        // Get URL parameters
        const params = new URLSearchParams(window.location.search);
        const county = params.get('county');
        const propertyId = params.get('propertyId');
        
        // County ID mapping
        const countyIds = {
            'Camden': '1',
            'Montgomery': '23'
        };
        
        const countyId = countyIds[county] || county;
        
        if (!propertyId) {
            document.querySelector('h1').textContent = 'Error';
            document.querySelector('p').textContent = 'Missing property ID';
        } else {
            const searchUrl = `https://salesweb.civilview.com/Sales/SalesSearch?countyId=${countyId}`;
            const detailUrl = `https://salesweb.civilview.com/Sales/SaleDetails?PropertyId=${propertyId}`;
            
            // Set manual link
            document.getElementById('manual-link').href = detailUrl;
            
            // Load search page in hidden iframe to set cookie
            const iframe = document.getElementById('cookie-frame');
            iframe.src = searchUrl;
            
            // Wait for iframe to load (sets the cookie), then redirect
            iframe.onload = function() {
                // Small delay to ensure cookie is set
                setTimeout(() => {
                    window.location.href = detailUrl;
                }, 500);
            };
            
            // Fallback: redirect after 3 seconds even if iframe doesn't load
            setTimeout(() => {
                window.location.href = detailUrl;
            }, 3000);
        }
    </script>
</body>
</html>
